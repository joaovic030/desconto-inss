<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row align-items-center">
    <div class="col-lg-10"> <h1>Proponentes</h1> </div>
    <div class="col-lg-2 text-end">
      <%= link_to 'Novo Proponente', new_proponente_path, class: 'btn btn-primary mb-4' %>
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Data de nascimento</th>
      <th>Endereco</th>
      <th>Telefone pessoal</th>
      <th>Telefone referencias</th>
      <th>Salario</th>
      <th>Desconto inss</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @proponentes.each do |proponente| %>
      <tr>
        <td><%= proponente.nome %></td>
        <td><%= proponente.cpf %></td>
        <td><%= proponente.data_de_nascimento %></td>
        <td><%= proponente.endereco&.logradouro %></td>
        <td><%= proponente.telefone_pessoal %></td>
        <td><%= proponente.telefone_referencias %></td>
        <td><%= proponente.salario %></td>
        <td><%= proponente.desconto_inss %></td>
        <td colspan="2">
          <%= link_to 'Exibir', proponente , class: 'btn btn-xs btn-primary' %>
          <%= link_to 'Remover', proponente, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

</div>